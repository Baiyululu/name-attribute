<body>
  <div class="card">
    <h2>姓名属性判断</h2>
    <input type="text" id="nameInput" placeholder="请输入姓名">
    <br>
    <button onclick="checkName()">提交</button>
    <div class="result" id="result"></div>
  </div>

  <script>
    function checkName() {
      const name = document.getElementById("nameInput").value.trim();
      const resultDiv = document.getElementById("result");

      if (name === "退出") {
        resultDiv.innerText = "程序已结束。";
      } else if (name === "王桓宇" || name === "大狗王") {
        resultDiv.innerText = "属性：臭狗";
      } else {
        resultDiv.innerText = "属性：天才";
      }
    }
  </script>
